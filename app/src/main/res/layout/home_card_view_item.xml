<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/btc_layout">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="BTC"
                tools:ignore="HardcodedText"
                android:gravity="center"
                android:textSize="@dimen/crypto_text_size"
                android:id="@+id/btc"
                android:background="@android:color/black"
                android:textColor="@android:color/white"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/black"
                    android:layout_alignParentBottom="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/black"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btc_rate"
                    android:text="3000.00"
                    tools:ignore="HardcodedText"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

            </RelativeLayout>

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:id="@+id/btc_currency"
                android:text="USD"
                tools:ignore="HardcodedText"
                android:gravity="center"
                android:textSize="@dimen/crypto_text_size"
                android:background="@android:color/black"
                android:textColor="@android:color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:id="@+id/eth_layout"
            android:layout_below="@id/btc_layout"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ETH"
                tools:ignore="HardcodedText"
                android:gravity="center"
                android:textSize="@dimen/crypto_text_size"
                android:id="@+id/eth"
                android:background="@android:color/black"
                android:textColor="@android:color/white"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/black"
                    android:layout_alignParentTop="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/black"
                    android:layout_alignParentBottom="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/eth_rate"
                    android:text="3000.00"
                    tools:ignore="HardcodedText"
                    android:gravity="center"
                    android:textColor="@android:color/black"/>

            </RelativeLayout>

            <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/app_name"
                android:id="@+id/eth_currency"
                android:text="USD"
                tools:ignore="HardcodedText"
                android:gravity="center"
                android:textSize="@dimen/crypto_text_size"
                android:background="@android:color/black"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>