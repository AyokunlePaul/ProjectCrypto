<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NGN"
            tools:ignore="HardcodedText"
            android:gravity="center"
            android:textSize="@dimen/country_text_size"
            android:id="@+id/country_code"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/country_code"
            android:id="@+id/country_name"
            android:text="Nigeria"
            android:textColor="@android:color/darker_gray"
            tools:ignore="HardcodedText"
            android:gravity="center"
            android:padding="3dp"
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/dummy_view"
            android:layout_below="@id/country_name"
            android:background="@android:color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btc_value"
            android:text="BTC"
            android:layout_below="@id/dummy_view"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText"
            android:textStyle="normal"
            android:gravity="center"
            android:padding="3dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/btc_value"
            android:id="@+id/dummy_view_2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eth_value"
            android:text="ETH"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            tools:ignore="HardcodedText"
            android:textStyle="normal"
            android:gravity="center"
            android:padding="3dp"
            android:layout_below="@id/dummy_view_2"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>